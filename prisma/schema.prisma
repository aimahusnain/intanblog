// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("NEXT_PUBLIC_DATABASE_URL")
}

model Post {
  id        Int      @id @default(autoincrement())
  title     String
  summary   String
  content   String
  category  String
  userId    String
  userImage String
  userEmail String
  comments  String[]
  image     String
  createdAt DateTime
}
